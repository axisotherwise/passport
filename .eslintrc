{
  "env": {
      "browser": true,
      "es2021": true
  },
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/"],
  "rules": {
    "max-len": ["error", { "code": 90 }],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "no-unexpected-multiline": "error"
  }
}
